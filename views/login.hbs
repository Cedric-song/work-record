<div class="tpl-login">
  <div class="tpl-login-content">
    <div class="tpl-login-logo">
    </div>

    <form class="am-form tpl-form-line-form" id="loginForm">

      <div class="am-form-group">
        <input name="email" type="text" class="tpl-form-input"  placeholder="请输入邮箱">
      </div>

      <div class="am-form-group">
        <input name="password" type="password" class="tpl-form-input"  placeholder="请输入密码">
      </div>

      <div class="am-form-group tpl-login-remember-me">
        <input id="remember-me" type="checkbox">
        <label for="remember-me">
          记住密码
        </label>
      </div>

      <div class="am-form-group">
        <button id="save" type="button" class="am-btn am-btn-primary  am-btn-block tpl-btn-bg-color-success  tpl-login-btn">提交</button>
      </div>

    </form>
  </div>
</div>
{{#extend "scripts"}}
<script type="text/javascript">
  ;(function(){
    $("#save").on("click", function(){
      var data = {
        email: d.qs("#loginForm input[name=email]").value,
        password: d.qs("#loginForm input[name=password]").value
      }

      fetch('/flow/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      }).then(function(res) {
        return res.json()
      }).then(function(json){
        if(json.code === 200){
          location.href = 'http://localhost:4000/users/record'
        }
      })

    })
  })()
</script>
{{/extend}}
